<% if current_user.patient?%>
  <h4>Book an appointment with <%= @consultation.doctor_profile.user.name %></h4>
<% else %>
   <h3 class= "text-warning">Booking for <%= @patient_profile.user.name%></h3>
<% end%>
<div class="row">
  <%= simple_form_for @consultation do |f|%>
    <div class="col-md-6">
      <p><%= f.input :doctor_profile_id, as: :hidden %></p>
      <% if @patient_workflow %>
        <p><%= f.input :patient_profile_id, as: :hidden %></p>
      <% else %>
        <p><%= f.input :patient_unique_id %></p>
      <% end %>
      <p><%= f.input :appointment_date, as: :date, html5: true %>
      <%= f.input :comments %></p>
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

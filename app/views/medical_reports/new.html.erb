 <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-8 col-sm-offset-2 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Add a Report <small>Here</small></h3>
        </div>
        <div class="panel-body">
          <form role="form">
            <% if !@medical_report.errors.empty? %>
            <div class = "alert alert-error">   
              <ul>
                <% @medical_report.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
            <% end %>
            <%= simple_form_for [@patient_profile , @medical_report] do |f|%>
              <%= f.input :title %>
              <%= f.input :report_date%>
              <%= f.input :attachment, as: :file , class: "btn btn-primary btn-block"%>
              <%= f.input :prescription, as: :radio_buttons %>
              <%= f.submit:save , class: "btn btn-info btn-block"%>
            <% end %>
          </form>
        </div>
      </div>
    </div>
  </div>


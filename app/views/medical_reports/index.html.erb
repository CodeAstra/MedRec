<div class="container">
    <ul class="timeline col-md-8">
      <% @patient_profile.medical_reports.each do |report| %>              
        <li>
          <div class="timeline-badge info"><i class="fa fa-smile-o"></i></div>
          <div class="timeline-panel row">
            <div class="col-md-6">
              
              <div class="timeline-heading">
                <h3 class="timeline-title">Title:<%= report.title %></h3>
              </div>
              <div class="timeline-body">
                <h5>Test Type: <%= report.prescription ? "Prescription" : "Test"%></h5>
                <h5>Date: <%= report.report_date %> </h5>
              </div>
            </div>
            <div class="col-md-1 col-md-offset-4">
              <%= link_to "" , patient_profile_medical_report_path(@patient_profile , report), class: "glyphicon glyphicon-file fa-3x"%> 
            </div>
            <div class="col-md-1"> 
              <% if current_user.patient?%>
                <%= link_to "",  patient_profile_medical_report_path(@patient_profile , report), method: :delete, class: "fa fa-times-circle-o fa-3x danger" %>
              <%end%>
            </div>
          </div>
        </li>
      <%end%>
    </ul>
</div>
<%= link_to "" , new_patient_profile_medical_report_path(@patient_profile) ,class: "fa fa-medkit fa-3x" %>


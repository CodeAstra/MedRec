
<div class="container">
    <ul class="timeline">
      <li class= "timeline-inverted">
        <div class="timeline-badge primary Second">
          <i class="fa fa-star-o">  
          </i>
        </div>
        <div class="timeline-panel">
          <%= link_to "Add File" , new_patient_profile_medical_report_path(@patient_profile) %> 
        </div>
      </li>
      <% @patient_profile.medical_reports.each do |report| %>
        <li class= "First">
          <div class="timeline-badge info  Second"><i class="fa fa-smile-o"></i></div>
          <div class="timeline-panel">
            <div class="col-md-6">

              <div class="timeline-heading">
                <h4 class="text-success">Title:   <%= report.title %></h4>
              </div>
              <div class="timeline-body">
                <h6 class="text-warning">Type: <%= report.prescription ? "Prescription" : "Test"%></h6>
                <h6>Date: <%= report.report_date %> </h6>
              </div>
            </div>
            <div class="col-md-1 col-md-offset-4">
              <%= link_to "" , patient_profile_medical_report_path(@patient_profile , report), class: "glyphicon glyphicon-file fa-2x"%>
            </div>
            <div class="col-md-1">
              <% if current_user.patient?%>
                <%= link_to content_tag(:i, '', class: "fa fa-trash-o fa-2x"), patient_profile_medical_report_path(@patient_profile , report), method: :delete %>
              <%end%>
            </div>
          </div>
        </li>
      <%end%>
    </ul>
</div>


